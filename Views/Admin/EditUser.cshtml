@model User
@{
    ViewData["Title"] = "Edit User";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit User</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">User Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="EditUser" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeeId"></label>
                            <input asp-for="EmployeeId" class="form-control" />
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>New Password (leave blank to keep current)</label>
                            <input type="password" name="newPassword" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Designation"></label>
                            <input asp-for="Designation" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Location"></label>
                            <input asp-for="Location" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Role"></label>
                            <select asp-for="Role" class="form-control">
                                <option value="Employee">Employee</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Profile Image</label>
                            <input type="file" name="profileImage" class="form-control" accept=".jpg,.jpeg,.png" />
                            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                            {
                                <div class="mt-2">
                                    <img src="@Model.ProfileImagePath" class="class="avatar" onerror="this.src='/lib/icons/user.jpg.png'" style="width:100px;height:100px;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Update User</button>
                    <a href="@Url.Action("Users")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>