@{
    ViewData["Title"] = "Create Group";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create New Group</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Group Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="CreateGroup" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Group Name</label>
                            <input type="text" name="groupName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Group Image</label>
                            <input type="file" name="groupImage" class="form-control" accept=".jpg,.jpeg,.png" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Select Members</label>
                            <select name="userIds" class="form-control select2" multiple="multiple" required>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.Name (@user.Email)</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create Group</button>
                    <a href="@Url.Action("Groups")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: "Select members",
                allowClear: true
            });
        });
    </script>
}