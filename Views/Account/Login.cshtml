@{
    ViewData["Title"] = "Login";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        background-color: #e3fcef;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
    }

    .card {
        background-color: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 360px;
    }

    .card h2 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.6rem;
        color: #2d3748;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-size: 0.9rem;
        margin-bottom: 4px;
        display: block;
        font-weight: 600;
        color: #4a5568;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px 14px;
        font-size: 0.95rem;
        border-radius: 25px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

    input:focus {
        border-color: #059b64;
        outline: none;
        box-shadow: 0 0 0 2px rgba(5, 155, 100, 0.2);
    }

    .btn {
        background-color: #059b64;
        color: white;
        border: none;
        width: 100%;
        padding: 10px;
        font-weight: bold;
        border-radius: 25px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-size: 1rem;
    }

    .btn:hover {
        background-color: #04784e;
    }

    .text-center {
        text-align: center;
        margin-top: 12px;
        font-size: 0.9rem;
    }

    .text-center a {
        color: #2563eb;
        text-decoration: none;
    }

    .text-center a:hover {
        text-decoration: underline;
    }

    .error-msg {
        color: red;
        font-size: 0.9rem;
        margin-bottom: 10px;
        text-align: center;
    }
</style>

<div class="form-container">
    <div class="card">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            @if (ViewBag.Error != null)
            {
                <div class="error-msg">@ViewBag.Error</div>
            }

            <div class="form-group">
                <label for="email">Email</label>
                <input name="email" type="email" class="form-control" placeholder="Email" required />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" placeholder="Password" required />
            </div>

            <button type="submit" class="btn" style="background: linear-gradient(to right, #20A090,rgb(45, 178, 211),#20A090);">Login</button>
        </form>

        <div class="text-center">
            <small>Don't have an account? <a asp-action="Register">Register here</a></small><br><br>
            <small> --><a href="Admin/Login">Admin Login</a> </small>

        </div>
    </div>
</div>
