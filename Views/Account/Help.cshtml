@{
    ViewData["Title"] = "Help and Support";
}

<style>
    .help-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: #f8f9fa;
    }
    .help-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0,0,0,0.08);
        margin: auto;
        max-height: 95vh;
        display: flex;
        flex-direction: column;
    }
    .help-card-body {
        overflow-y: auto;
        padding: 1.5rem;
        flex: 1;
    }
    .form-control:read-only {
        background-color: #f8f9fa !important;
    }
    textarea.form-control {
        resize: none;
        min-height: 120px;
    }
    .card-header {
        background: linear-gradient(135deg, #20A090, #2BB8A6);
    }
    .btn-submit {
        background: linear-gradient(135deg, #20A090, #2BB8A6);
        border: none;
    }
    .form-floating>label {
        color: #6c757d;
    }
    .compact-field {
        margin-bottom: 0.8rem;
    }
</style>

<div class="help-container py-3">
    <div class="container" style='margin: auto;'>
        <div class="row justify-content-center m-0">
            <div class="col-lg-8 p-0">
                <div class="card help-card border-0">
                    <div class="card-header text-center text-white py-3">
                        <h4 class="mb-1"><i class="fas fa-headset me-2"></i>Help & Support</h4>
                        <small class="opacity-80">We'll get back to you shortly</small>
                    </div>
                    
                    <div class="help-card-body">
                        <div class="alert alert-info text-center py-2 mb-3">
                            <i class="fas fa-ticket-alt me-2"></i>
                            Ticket ID: <strong>@ViewBag.TicketId</strong>
                        </div>

                        <form method="post" asp-action="SubmitHelpTicket" asp-controller="Account">
                            <div class="row g-2 mb-2">
                                <div class="col-md-6">
                                    <div class="form-floating compact-field">
                                        <input type="text" class="form-control bg-light" value="@ViewBag.Name" readonly />
                                        <label>Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating compact-field">
                                        <input type="email" class="form-control bg-light" value="@ViewBag.Email" readonly />
                                        <label>Email</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-2 mb-2">
                                <div class="col-md-6">
                                    <div class="form-floating compact-field">
                                        <input type="text" class="form-control bg-light" value="@ViewBag.Designation" readonly />
                                        <label>Designation</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating compact-field">
                                        <input type="text" class="form-control bg-light" value="@ViewBag.EmployeeId" readonly />
                                        <label>Employee ID</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating compact-field mb-3">
                                <input type="text" class="form-control bg-light" value="@ViewBag.Role" readonly />
                                <label>Role</label>
                            </div>

                            <div class="mb-3">
                                <label class="form-label small text-muted">Describe your issue</label>
                                <textarea name="Problem" class="form-control" placeholder="Please describe your issue..." required></textarea>
                                <div class="form-text small">Typical response time: 24-48 hours</div>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-submit text-white py-2">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Ticket
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add this to your layout if not already present -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">