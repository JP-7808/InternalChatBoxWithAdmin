@model InternalChatbox.Models.User

@{
    ViewData["Title"] = "Register";
}

<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
   
    label {
        font-weight: 600;
        color: #0c8aad;
    }
    .card {
        border-radius: 20px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.15);
    }

    .form-control {
        border-radius: 50px;
        padding: 10px 20px;
    }

    .btn-primary {
        border-radius: 50px;
        background: linear-gradient(135deg, #00c853, #009624);
        border: none;
        transition: 0.3s;
        font-weight: bold;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #6a2525, #00f4d7);
    }

    .register-heading {
        font-weight: bold;
        margin-bottom: 30px;
        color: #2d3748;
    }

    .small-text {
        font-size: 0.9rem;
    }

    .form-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
</style>

<div class="form-wrapper">
    <div class="card p-4" style="max-width: 700px; width: 100%;">
        <h2 class="text-center register-heading">Create Your Account</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                    <input asp-for="EmployeeId" class="form-control" placeholder="Enter employee ID" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="Designation" class="form-label">Designation</label>
                    <input asp-for="Designation" class="form-control" placeholder="Enter designation" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter location" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" required />
                </div>

                <div class="col-md-12">
                    <label class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" placeholder="Enter password" required />
                </div>

                <div class="col-md-12 d-grid mt-3">
                    <button type="submit" class="btn fw-bolder text-white" style="background: linear-gradient(to right, #20A090,rgb(45, 178, 211),#20A090);">Register</button>
                </div>
            </div>
        </form>

        <div class="text-center mt-3">
            <small class="small-text">Already have an account? <a asp-action="Login" class="text-primary fw-bold">Login here</a></small>
        </div>
    </div>
</div>
